# MACP 环境变量配置

# 微博配置 (https://open.weibo.com)
WEIBO_APP_KEY=your_weibo_app_key
WEIBO_APP_SECRET=your_weibo_app_secret
WEIBO_ACCESS_TOKEN=your_weibo_access_token
WEIBO_ENABLED=true

# 抖音配置
DOUYIN_APP_KEY=your_douyin_app_key
DOUYIN_APP_SECRET=your_douyin_app_secret
DOUYIN_ACCESS_TOKEN=your_douyin_access_token
DOUYIN_ENABLED=false

# 小红书配置
XHS_APP_KEY=your_xhs_app_key
XHS_APP_SECRET=your_xhs_app_secret
XHS_ACCESS_TOKEN=your_xhs_access_token
XHS_ENABLED=false

# 今日头条配置
TOUTIAO_APP_KEY=your_toutiao_app_key
TOUTIAO_APP_SECRET=your_toutiao_app_secret
TOUTIAO_ACCESS_TOKEN=your_toutiao_access_token
TOUTIAO_ENABLED=false

# 火山引擎配置 (支持抖音/今日头条)
# 在 https://console.volcengineapi.com/ 获取
VOLCANO_ACCESS_KEY_ID=your_access_key_id
VOLCANO_SECRET_ACCESS_KEY=your_secret_access_key
VOLCANO_ENABLED=false

# 广告网络配置 (选择一种)
AD_PROVIDER=google_adsense  # google_adsense, amazon_ads, custom
AD_API_KEY=your_ad_api_key
AD_API_SECRET=your_ad_api_secret
AD_PUBLISHER_ID=your_publisher_id
AD_ENABLED=true

# 电商平台配置
ECOM_PROVIDER=shopify  # shopify, amazon, woocommerce
ECOM_API_KEY=your_ecom_api_key
ECOM_API_SECRET=your_ecom_api_secret
ECOM_STORE_URL=https://your-store.myshopify.com
ECOM_ENABLED=true

# 交易平台配置
TRADING_PROVIDER=binance  # binance, coinbase, alpaca
TRADING_API_KEY=your_trading_api_key
TRADING_API_SECRET=your_trading_api_secret
TRADING_TESTNET=true  # true for testnet, false for production
TRADING_ENABLED=true

# 支付配置
PAYMENT_PROVIDER=stripe  # stripe, paypal
PAYMENT_API_KEY=your_payment_api_key
PAYMENT_API_SECRET=your_payment_api_secret
PAYMENT_WEBHOOK_SECRET=your_webhook_secret
PAYMENT_ENABLED=true

# 通用配置
AUTO_START=true
TRADING_INTERVAL=30000  # 毫秒
CONTENT_INTERVAL=60000  # 毫秒
