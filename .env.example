# MACP 环境变量配置

# 广告网络配置 (选择一种)
AD_PROVIDER=google_adsense  # google_adsense, amazon_ads, custom
AD_API_KEY=your_ad_api_key
AD_API_SECRET=your_ad_api_secret
AD_PUBLISHER_ID=your_publisher_id
AD_ENABLED=true

# 电商平台配置
ECOM_PROVIDER=shopify  # shopify, amazon, woocommerce
ECOM_API_KEY=your_ecom_api_key
ECOM_API_SECRET=your_ecom_api_secret
ECOM_STORE_URL=https://your-store.myshopify.com
ECOM_ENABLED=true

# 交易平台配置
TRADING_PROVIDER=binance  # binance, coinbase, alpaca
TRADING_API_KEY=your_trading_api_key
TRADING_API_SECRET=your_trading_api_secret
TRADING_TESTNET=true  # true for testnet, false for production
TRADING_ENABLED=true

# 支付配置
PAYMENT_PROVIDER=stripe  # stripe, paypal
PAYMENT_API_KEY=your_payment_api_key
PAYMENT_API_SECRET=your_payment_api_secret
PAYMENT_WEBHOOK_SECRET=your_webhook_secret
PAYMENT_ENABLED=true

# 通用配置
AUTO_START=true
TRADING_INTERVAL=30000  # 毫秒
CONTENT_INTERVAL=60000  # 毫秒
